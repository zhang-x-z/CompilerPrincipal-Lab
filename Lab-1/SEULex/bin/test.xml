<?xml version="1.0" encoding="UTF-8"?>
<Lex>
    <userDefinitions></userDefinitions>
    <reDefinitions>
        <digit>
            [0-9]
        </digit>
    </reDefinitions>
    <rules>
        <rule>
            <re>
                [1-9]{digit}*|0
            </re>
            <action>
                cout &lt;&lt; "INT" &lt;&lt; endl;
            </action>
        </rule>
        <rule>
            <re>
                [1-9]{digit}*\.{digit}*|0\.{digit}*
            </re>
            <action>
                cout &lt;&lt; "FLOAT" &lt;&lt; endl;
            </action>
        </rule>
    </rules>
    <userCode></userCode>
</Lex>